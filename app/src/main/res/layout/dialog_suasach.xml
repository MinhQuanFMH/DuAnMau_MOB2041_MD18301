<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cập nhật sách"
        android:textSize="30sp"
        android:textColor="#1BD523"
        android:fontFamily="@font/quicksandbold"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/txtMaSachUp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:fontFamily="@font/quicksandbold"/>

    <EditText
        android:id="@+id/edtTenSachUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Nhập tên sách"
        android:background="@drawable/custom_edtdialogthemsach"/>

    <EditText
        android:id="@+id/edtGiaThueSachUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Nhập giá thuê"
        android:background="@drawable/custom_edtdialogthemsach"/>
    <Spinner
        android:id="@+id/spnLoaiSachUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_edtdialogthemsach"/>


</LinearLayout>